    <!-- Optical breadboard mesh and material -->
    <mesh name="optical_breadboard" file="../common_arena/OpticalBreadBoard.STL" scale="0.001 0.001 0.001"/>
    <material name="breadboard_material" rgba="0.8 0.8 0.8 1"/>
